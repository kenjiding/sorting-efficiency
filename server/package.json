{
  "name": "sorting-system-server",
  "version": "1.0.0",
  "description": "Backend server for Sorting Management System",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.mjs",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.config.mjs --watch",
    "build:layer": "node scripts/build-layer.js",
    "sam:build": "npm run build:layer && npm run build && sam build",
    "sam:deploy": "npm run sam:build && sam deploy",
    "sam:deploy:guided": "npm run sam:build && sam deploy --guided",
    "deploy": "npm run sam:deploy",
    "clear:service-data": "node scripts/clearServiceData.js"
  },
  "keywords": [
    "express",
    "mongodb",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@vendia/serverless-express": "^4.10.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "mongodb": "^6.21.0",
    "mongoose": "^9.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
